<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Padding="10" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelpYou.CoursePage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="CourseList" HasUnevenRows="True" SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ContentView Padding="10,5,10,5">
                                <Label Text="{Binding Name}" />
                            </ContentView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="AddCourseButton" Clicked="AddCourse" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>